<p id="notice"><%= notice %></p>

<h1>Stock Lists</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @stock_lists.each do |stock_list| %>
      <tr>
        <td><%= stock_list.name %></td>
        <td><%= link_to 'Edit', edit_stock_list_path(stock_list) %></td>
        <td><%= link_to 'Destroy', stock_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock List', new_stock_list_path, class:"btn btn-default" %>
